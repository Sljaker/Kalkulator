    private void zarezActionPerformed(java.awt.event.ActionEvent evt) {                                      
        ekran.setText(ekran.getText()+zarez.getText());
        zarez.setEnabled(false);
        
    }                                     

    private void poznegActionPerformed(java.awt.event.ActionEvent evt) {                                       
        plusMinus=(Double.parseDouble(String.valueOf(ekran.getText())));
        plusMinus=plusMinus*(-1);
        ekran.setText(String.valueOf(plusMinus));
    }                                      

    private void plusActionPerformed(java.awt.event.ActionEvent evt) {                                     
        a = (Double.parseDouble(String.valueOf(ekran.getText())));
        ekran.setText("");
        saberi = 1;
        plus.setEnabled(false);
        zarez.setEnabled(true);
    }                                    

    private void minusActionPerformed(java.awt.event.ActionEvent evt) {                                      
        a = (Double.parseDouble(String.valueOf(ekran.getText())));
        ekran.setText("");
        oduzmi = 1;
        minus.setEnabled(false);
        zarez.setEnabled(true);
    }                                     

    private void deljenjeActionPerformed(java.awt.event.ActionEvent evt) {                                         
        a = (Double.parseDouble(String.valueOf(ekran.getText())));
        ekran.setText("");
        podeli = 1;
        deljenje.setEnabled(false);
        zarez.setEnabled(true);
    }                                        

    private void mnozenjeActionPerformed(java.awt.event.ActionEvent evt) {                                         
       
        a = (Double.parseDouble(String.valueOf(ekran.getText())));
        ekran.setText("");
        pomnozi = 1;
        mnozenje.setEnabled(false);
        zarez.setEnabled(true);
    }                                        

    private void jednakoActionPerformed(java.awt.event.ActionEvent evt) {                                        
        b = (Double.parseDouble(String.valueOf(ekran.getText())));
        if(saberi > 0){
            rezultat = a + b;
            ekran.setText(String.valueOf(rezultat));
            
        }
        if(oduzmi > 0){
            rezultat = a - b;
            ekran.setText(String.valueOf(rezultat));
            
        }
        if(pomnozi > 0){
            rezultat = a * b;
            ekran.setText(String.valueOf(rezultat));
            
        }
        if(podeli > 0){
            rezultat = a / b;
            ekran.setText(String.valueOf(rezultat));
            
        }
         zarez.setEnabled(true);
         
    }                                       
 
    
